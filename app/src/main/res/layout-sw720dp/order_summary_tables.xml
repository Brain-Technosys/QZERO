<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_delete"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/tableItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Roasted Stuffed Mushroom"
                    android:singleLine="true"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:layout_weight="1"

                    ></TextView>

                <TextView
                    android:id="@+id/item_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_weight="0.5"
                    android:textSize="18sp"

                    ></TextView>
                <TextView
                    android:id="@+id/item_totalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:text="$30.00"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="18sp"

                    ></TextView>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/table_modifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TableLayout>
    </LinearLayout>


</RelativeLayout>