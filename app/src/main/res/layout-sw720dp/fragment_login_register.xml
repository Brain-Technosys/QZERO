<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edtTxtFirstName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_fname"
        android:inputType="text"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/edtTxtLastName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_lname"
        android:inputType="text"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/edtTextEmail"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/edtTxtUname"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_uname"
        android:inputType="text"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/edtTextPass"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_pass"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/edtTxtConfPassword"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_editext"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_conf_pass"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_edittext_background"
        android:textColorHint="@color/color_edittext_background"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp" >

        <CheckBox
            android:id="@+id/chkBoxAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txtAgreement1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_agreement1" />

        <TextView
            android:id="@+id/txtAgreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_agreement2"
            android:layout_marginLeft="2dp"
            android:textColor="@color/color_tab_text_selected" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivRegisterSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:src="@drawable/next_button_selector" />

</LinearLayout>