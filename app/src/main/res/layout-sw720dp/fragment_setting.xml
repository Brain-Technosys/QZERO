<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_bg"
    android:padding="10dp"
    tools:context="com.example.qzero.MyAccount.Fragments.SettingFragment">


    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/old_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/text_size_content_720"

        />


    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_old_password"
        android:gravity="center"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/text_size_content_720" />


    <EditText
        android:id="@+id/et_cnf_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new_password"
        android:gravity="center"
        android:textSize="@dimen/text_size_content_720"
        android:hint="@string/cnf_password"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height_720"
        android:layout_below="@+id/et_cnf_password"
        android:background="@drawable/selector"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/btn_padding_720"
        android:paddingRight="@dimen/btn_padding_720"
        android:textSize="@dimen/btn_text_size_720"
        android:text="@string/save" />


</RelativeLayout>
