<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="1.5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/ll_first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblOrderID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_content_720"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOrderID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/lblOrderID"

                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_content_720" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_row_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_first_row"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase Date:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/lblDate"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_row_1"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/lblItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Items:"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720"

                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtItemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_toRightOf="@+id/lblItems"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_size_content_720" />

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/txtStatus"
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_row_2"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/lblDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Discount:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720"

                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/lblDiscount"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720" />

                <TextView
                    android:id="@+id/lblAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/txtAmount"
                    android:text="Amount:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_content_720"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"

                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_size_content_720" />

                <TextView
                    android:id="@+id/txtViewBilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_red"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtViewDeliveryType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_red"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtViewSeatNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_red"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtViewShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_red"
                    android:textSize="15sp"
                    android:visibility="invisible" />


            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>