<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_outlet">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/frameLayItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/linLayAdvertisement">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linLayAdvertisement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewAd1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="#ffde665d">
            </ImageView>

            <ImageView
                android:id="@+id/imgViewAd2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="@android:color/black">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->
    <include
        layout="@layout/nav_drawer_cat"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>