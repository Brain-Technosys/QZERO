<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qzero.Outlet.Fragments.ViewCartFragment">

    <LinearLayout
        android:id="@+id/cart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Shopping Cart" />
    </LinearLayout>

    <ListView
        android:id="@+id/listCartItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_view"
        android:layout_above="@+id/bottomCartLayout"
        android:text="@string/hello_blank_fragment" />
    <LinearLayout
         android:id="@+id/bottomCartLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"

            android:text="Total $ 300.00"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/continue_shopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/selector"
                android:text="CONTINUE SHOPPING"
                android:textSize="15sp"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/placeOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/green_selector"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="PLACE ORDER"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
