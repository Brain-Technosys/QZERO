<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_navigation_menu_item"
       >


        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/transparent" />

        <TextView

            android:id="@+id/txtViewCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/img_profile"
            android:gravity="start"
            android:layout_marginLeft="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="My Profile"
            android:textColor="@color/navigation_text_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imgViewDownArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerCrop"
           android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />

        <ImageView
            android:id="@+id/imgViewUpArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/downarrow"
            android:visibility="gone"/>



    </RelativeLayout>


</RelativeLayout>
