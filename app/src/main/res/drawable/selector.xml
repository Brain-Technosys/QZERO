<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/color_red" android:startColor="@color/color_red" />

            <stroke android:width="2dp" android:color="@color/color_red" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/primary_color" android:startColor="@color/primary_color" />

            <stroke android:width="1dp" android:color="@color/primary_color" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>