<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">


        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Theme.MyTheme.EditText" parent="AppBaseTheme">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/color_accent</item>
    </style>

    <style name="menu_style" parent="AppBaseTheme">
        <item name="android:actionMenuTextAppearance"> @dimen/menu_text_size </item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyChkBoxStyle" parent="AppBaseTheme">
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

</resources>
