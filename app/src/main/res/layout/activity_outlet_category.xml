<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_outlet">

        <include
           android:id="@+id/include"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar"
            />

        <RelativeLayout
            android:id="@+id/relLayOutletHeading"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/include"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/txtViewSubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_outlet"
                android:layout_centerVertical="true"
                android:textSize="@dimen/outlet_heading_size"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_tab_text_selected"/>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/outlet_scrollView"
            android:layout_below="@+id/relLayOutletHeading"
            android:layout_width="wrap_content"
            android:layout_above="@+id/advertisement"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#DFDFDF">

            <TableLayout
                android:id="@+id/tableLayoutItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </ScrollView>
        <ImageView
            android:id="@+id/advertisement"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_back"
            android:layout_gravity="bottom">

        </ImageView>
    </RelativeLayout>


    <!-- The navigation drawer -->
    <include
        layout="@layout/nav_drawer"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>