<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white">
    <RelativeLayout
        android:id="@+id/cat_outlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/outletImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:src="@drawable/food1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtOutletItemTitleoverImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:background="@color/oulet_image_strip"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <TextView
            android:id="@+id/txtOutletItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:layout_below="@+id/layout_strip"
            android:text="Chicken"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtOutletItemTitle"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="$ 200.00"
            android:textColor="@android:color/black"
            android:textSize="15dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
