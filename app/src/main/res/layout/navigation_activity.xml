<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/navigation_item_background"

     >

    <include
        android:layout_alignParentTop="true"
        android:id="@+id/header"
        layout="@layout/nav_header_catogery"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        />
    <RelativeLayout
        android:id="@+id/changeProfile"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_navigation_menu_item">


        <ImageView
                android:id="@+id/img_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/profile_icon"
                />

        <TextView

            android:layout_toRightOf="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="My Profile"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            />



    </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/changeProfile"
            android:id="@+id/changeOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_navigation_menu_item"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/home_icon"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Change Outlet"
                android:layout_toRightOf="@+id/img_outlet"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@android:color/white"
                />


        </RelativeLayout>



    <RelativeLayout
        android:id="@+id/selectOutlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeOutlet"
        android:orientation="horizontal"
        android:background="@drawable/selector_navigation_menu_item">
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selectOutlet"
        android:background="@color/navigation_drawer_background"
        android:orientation="vertical"
        >

        </LinearLayout>

</RelativeLayout>