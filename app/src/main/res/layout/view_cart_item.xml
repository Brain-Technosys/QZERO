<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/transparent">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#dcdcdc"
        card_view:cardElevation="3dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/cart_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/cart_view"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Roasted Stuffed Mushroom"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/edit"
                android:layout_alignParentLeft="true"
                android:textStyle="bold" />
                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_edit"/>
            </RelativeLayout>


                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="Total Price : $ 100.00"
                    android:background="@color/cardview_back"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Detail "
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@color/primary_color"
        android:layout_below="@+id/cart_item_detail"/>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_below="@+id/show_detail"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >


        <TableLayout
            android:layout_below="@+id/cart_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="1.  Roasted Stuffed Mushroom"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="$5.00 x 2"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="$50.00"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_delete"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:text="Soya Sauce"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="$5.00 x 2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="$50.00"/>

                <ImageView
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_delete"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>



</RelativeLayout>